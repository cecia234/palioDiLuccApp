{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev"
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000"
      },
      {
        "name": "Next.js: debug full stack (MS)",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev-ms",
        "serverReadyAction": {
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        },
        "env": {
          "NODE_ENV": "development"
        }
      },
      {
        "name": "Next.js: debug full stack (UNIX)",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev-unix",
        "serverReadyAction": {
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        },
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }